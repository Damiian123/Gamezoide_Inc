<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7C0"
    tools:context=".PantallaViajes">

    <Button
        android:id="@+id/botonViaje1"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="100dp"
        android:background="#47C117"
        android:text=" -Cliente: Armando Gamez\n -De: Dalias 1810, Industrias\n -A: Sendero\n -Monto: $80"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViajes" />

    <Button
        android:id="@+id/botonViaje2"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:background="#47C117"
        android:text=" -Cliente: Frank Martinez\n -De: UPSLP\n -A: Fundadores\n -Monto: $35"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonViaje1" />

    <Button
        android:id="@+id/botonViaje3"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:background="#47C117"
        android:text=" -Cliente: Uriel Avila\n -De: Alameda\n -A: Plaza El Dorado\n -Monto: $78"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonViaje2" />

    <TextView
        android:id="@+id/textViajes"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#3297D6"
        android:gravity="center"
        android:text="LISTA DE VIAJES"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonTerminar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#D69432"
        android:text="terminar turno y salir"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonViaje3" />

    <TextView
        android:id="@+id/textIndicaciones"
        android:layout_width="330dp"
        android:layout_height="25dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="60dp"
        android:text="-Toque un cuadro para aceptar un viaje."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViajes" />
</androidx.constraintlayout.widget.ConstraintLayout>