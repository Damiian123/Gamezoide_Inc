<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".PantallaHistorial">

    <TextView
        android:id="@+id/texttitulo"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#D69432"
        android:gravity="center"
        android:text="HISTORIAL DE VIAJES"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonHistorial1"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="100dp"
        android:background="#ABA7AF"
        android:text=" -Cliente: Armando Gamez\n -De: Dalias 1810, Industrias\n -A: Sendero\n -Monto: $80"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texttitulo" />

    <Button
        android:id="@+id/botonHistorial2"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:background="#ABA7AF"
        android:text=" -Cliente: Frank Martinez\n -De: UPSLP\n -A: Fundadores\n -Monto: $35"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonHistorial1" />

    <Button
        android:id="@+id/botonHistorial3"
        android:layout_width="350dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:background="#ABA7AF"
        android:text=" -Cliente: Uriel Avila\n -De: Alameda\n -A: Plaza El Dorado\n -Monto: $78"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonHistorial2" />

    <TextView
        android:id="@+id/textAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Pulse sobre los cuadros para ver detalles de los viajes."
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texttitulo" />

    <Button
        android:id="@+id/botonRegresar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#3297D6"
        android:text="Regresar"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonHistorial3" />

</androidx.constraintlayout.widget.ConstraintLayout>